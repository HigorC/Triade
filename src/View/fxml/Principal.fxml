<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.PrincipalController">
   <center>
      <VBox alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Vozes possíveis para essa cifra" textFill="WHITE">
               <font>
                  <Font name="Aharoni Bold" size="27.0" />
               </font></Label>
            <TextField fx:id="tfVozUm" editable="false" maxWidth="-Infinity" prefHeight="25.0" prefWidth="400.0" promptText="Voz 1" />
            <TextField fx:id="tfVozDois" editable="false" maxWidth="-Infinity" prefHeight="25.0" prefWidth="400.0" promptText="Voz 2" />
            <TextArea fx:id="tfSaida" editable="false" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="106.0" prefWidth="400.0" promptText="Tríades da sua cifra" />
         </children>
      </VBox>
   </center>
   <top>
      <HBox alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="tfPrimeiraNota" onAction="#enviar" prefHeight="25.0" prefWidth="63.0" promptText="1ª Nota" />
            <TextField fx:id="tfEntrada" onAction="#enviar" onKeyPressed="#alteracaoEntrada" promptText="Digite a cifra da música, separado por espaços" HBox.hgrow="ALWAYS" />
            <ComboBox fx:id="cbNotasNaturais" prefHeight="25.0" prefWidth="68.0" />
            <Button fx:id="btnAdicionar" mnemonicParsing="false" onAction="#adicionarNota" styleClass="btnAzul" text="+" textFill="WHITE" />
            <Button fx:id="fxEnviar" mnemonicParsing="false" onAction="#enviar" styleClass="btnVerde" text="Criar" textFill="WHITE" />
         </children>
         <padding>
            <Insets left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </top>
</BorderPane>
